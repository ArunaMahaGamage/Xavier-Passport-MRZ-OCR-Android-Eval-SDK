<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/idLayoutInflater">

    <TableRow
        android:paddingTop="1px"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_span="2"
            android:text="ID"
            android:textColor="#890000"
            android:textSize="30sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:text="Document Type :"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dip">
        </TextView>

        <EditText
            android:id="@+id/documentType"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1" >

        </EditText>

    </TableRow>

    <TableRow android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:text="Issuing Country :"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dip">
        </TextView>

        <EditText
            android:id="@+id/issuingCountry"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1" >

        </EditText>

    </TableRow>

    <TableRow android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:text="Card Number :"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dip">
        </TextView>

        <EditText
            android:id="@+id/cardNumber"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1" >

        </EditText>

    </TableRow>

    <TableRow android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:text="Transaction Code :"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dip">
        </TextView>

        <EditText
            android:id="@+id/transactionCode"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1" >

        </EditText>

    </TableRow>

    <TableRow android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:text="Date Of Birth :"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dip">
        </TextView>

        <EditText
            android:id="@+id/dateOfBirth"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1" >

        </EditText>

    </TableRow>


    <TableRow android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:text="Gender :"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dip">
        </TextView>

        <EditText
            android:id="@+id/gender"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1" >

        </EditText>

    </TableRow>

    <TableRow android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:text="Expiration Date :"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dip">
        </TextView>

        <EditText
            android:id="@+id/expirationDate"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1" >

        </EditText>

    </TableRow>
    <TableRow android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:text="Nationality :"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dip">
        </TextView>

        <EditText
            android:id="@+id/nationality"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1" >

        </EditText>

    </TableRow>



    <TableRow android:layout_marginTop="10dip" >

        <TextView
            android:layout_width="wrap_content"
            android:text="Bearer Name :"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginLeft="20dip">
        </TextView>

        <EditText
            android:id="@+id/bearerName"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_weight="1" >

        </EditText>

    </TableRow>

</TableLayout>