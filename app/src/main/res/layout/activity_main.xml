<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_centerInParent="true"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/material_blue_grey_800">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:weightSum="6">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="60dp"
        android:layout_height="1dip"
        android:layout_weight="1"
        android:text="" />

    <ImageButton
        android:id="@+id/stop"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/xavier_btn_stop"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="1dip"
        android:layout_weight="1"
        android:text="" />

    <ImageButton
        android:id="@+id/startXavier"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/xavier_btn_start"
        android:background="@android:color/transparent"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_weight="1"
        android:layout_width="5dp"
        android:layout_height="1dp"
        android:text="" />

</LinearLayout>

    <!-- Document Type Inflater //-->
    <ScrollView
        android:id="@+id/document_type_inflater"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:id="@+id/documentTypeInflaterLayout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:orientation="vertical"/>

    </ScrollView>


</LinearLayout>